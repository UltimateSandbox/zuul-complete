<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.5.0</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.example</groupId>
    <artifactId>zuul-demo</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <name>Zuul Demo</name>
    <description>Zuul Demo</description>

    <properties>
        <java.version>1.8</java.version>
    </properties>

    <modules>
        <module>petclinic-config-server</module>
        <module>petclinic-eureka-server</module>
        <module>petclinic-owner-microservice</module>
        <module>petclinic-pet-microservice</module>
        <module>petclinic-zuul-gateway</module>
    </modules>

    <build>
        <defaultGoal>clean package</defaultGoal>
    </build>

</project>
